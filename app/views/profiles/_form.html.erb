
<div class="container">
  <div class="row">
    <main class="col s6 offset-s3 z-depth-3 signup-details">
      <h4 class="signup-center">Enter Details</h4>
        <%= form_for @profile, html:{class: 'chirpy-form'}  do |f| %>
        <div class="field input-field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field input-field">
          <%= f.label :age %>
          <%= f.text_field :age %>
          </div>
        <div class="field input-field ">
        <%= f.file_field :image %>
        </div>
        <div class="field input-field">
        <%= f.label :bio %>
        </div>
        <div class="field input-field">
        <%= f.text_field :bio %>
        </div>
        <div class="field input-field">
        <%= f.select :gender,%w{Male Female}, required: true, placeholder: 'Gender', class: 'form-control' %>
        </div>

        <%= fields_for @language, html:{class: 'chirpy-form'}  do |f| %>
          <div class="field input-field" id="lang">
            <%= f.label "Native language" %>
            <%= f.text_field :language_native %>
            </div>
            <div class="field input-field" id="lang">
            <%= f.label "Language to learn" %>
            <%= f.text_field :language_target %>
            </div>

           <div class="field input-field" id="prof">
            <%= f.select :proficiency, [1,2,3], required: true, class: 'form-control' %>
            </div>
        <% end %>


      <div class="actions">
        <%= f.submit "Create Profile", class: 'waves-effect waves-light btn log-in-button' %>
      </div>

<% end %>

</main>
  </div>
</div>