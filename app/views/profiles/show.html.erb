<div class="container">
  <div class="row">
    <main class="col s6 z-depth-3 profile-main">

<%= image_tag @profile.image.url(:thumb, timestamp: false), class: 'profile-picture' %>
<p><%= @profile.name %></p>
<p><%= @profile.bio %></p>
<p><%= @profile.age %></p>
<p><%= @profile.gender %></p>

<%= link_to 'edit your profile', edit_profile_path(@profile), class: 'waves-effect waves-light btn sign-up-button'  %>

  </main>
  </div>
</div>


<div class="container">
<div class="row">
  <div class="col s6">
    <div style="height: 300px; overflow-y: auto;">
      <div class="panel panel-default">
        <div class="panel-heading">Registered Users</div>
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each_with_index do |user, index| %>
              <tr>
                <td><%= index +=1 %></td>
                <td><%= user.email %></td>
                <td>
                  <%= link_to "Message", '#', class: "btn btn-success btn-xs start-conversation",
                              "data-sid" => current_user.id, "data-rip" => user.id %>
                </td>
              </tr>
          <% end %>

          </tbody>
        </table>
      </div>

    </div>

  </div>
</div>
</div>

