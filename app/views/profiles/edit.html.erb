<div class="container">
  <div class="row">
    <main class="update-profile">
      <h4><%= t('.Edit_Profile')%></h4>

<%= form_for @profile, html:{class: 'chirpy-form'} do |f| %>
  <label><%= t('.Name')%></label>
  <label><%= f.text_field :name %></label>
  <label><%= t('.Age')%></label>
  <label><%= f.text_field :age %></label>
  <label><%= t('.Profile_Photo')%></label>
  <label><%= f.file_field :image %></label>
  <label> <%= t('.About_Me')%></label>
  <label><%= f.text_field :bio %></label>
  <label><%= t('.Gender')%></label>
  <label><%= f.select :gender,%w{Male Female}, required: true, placeholder: 'Gender', class: 'form-control' %></label>


  <ul>
    <% @language.each do |lang| %>
      <li>

        <label><%= t('.Language_To_Learn')%>: <%= select_tag(:language_target, options_for_select(['English', 'German', 'Spanish', 'French', 'Italian'], selected: lang.language_target)) %></label>

        <label><%= t('.Current_Level')%>: <%= select_tag(:proficiency, options_for_select(['Beginner', 'Average', 'Fluent'], selected: lang.proficiency)) %></label>
      </li>
    <% end %>
  </ul>


  <%= f.submit t(".Update_Profile"), class: 'waves-effect waves-light btn update-profile-button'%>
<% end %>

   </main>
  </div>
</div>
